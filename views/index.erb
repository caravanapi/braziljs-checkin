  <div id="main">
    <section id="current-keynote">
      <a href="/<%= @current.try(:id) %>">
        <figure>
          <img src="img/photos/<%= @current.try(:author).try(:parameterize) %>.jpg" alt="<%= @current.try(:title) %>">
        </figure>
