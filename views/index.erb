    <ul class="speakers-list">
      <% @keynotes.each do |keynote| %>
        <li>
          <a href="/keynote/<%= keynote.try(:id) %>">
            <img src="img/photos/<%= keynote.try(:author).try(:parameterize) %>.jpg" alt="<%= keynote.try(:title) %>">
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div> <!-- end of #container -->
